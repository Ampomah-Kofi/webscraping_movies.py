# Import required libraries
import requests
import sqlite3
import pandas as pd
from bs4 import BeautifulSoup

# Define source URL and output targets
url = 'https://web.archive.org/web/20230902185655/https://en.everybodywiki.com/100_Most_Highly-Ranked_Films'
db_name = 'Movies.db'
table_name = 'Top_50'
csv_path = 'top_50_films.csv'

# Create an empty DataFrame with predefined columns
df = pd.DataFrame(columns=["Average Rank", "Film", "Year"])

# Counter to limit extraction to top 50 films
count = 0

# Send HTTP request and retrieve HTML content
html_page = requests.get(url).text

# Parse HTML using BeautifulSoup
data = BeautifulSoup(html_page, 'html.parser')

# Locate all table bodies on the page
tables = data.find_all('tbody')

# Extract all table rows from the first table body
rows = tables[0].find_all('tr')

# Iterate through each row in the table
for row in rows:
    if count < 50:
        # Extract all table data cells
        col = row.find_all('td')

        # Process only rows with valid data
        if len(col) != 0:
            # Create a dictionary for the current row
            data_dict = {
                "Average Rank": int(col[0].contents[0]),
                "Film": str(col[1].contents[0]),
                "Year": int(col[2].contents[0])
            }

            # Convert dictionary to DataFrame
            df1 = pd.DataFrame(data_dict, index=[0])

            # Append the row to the main DataFrame
            df = pd.concat([df, df1], ignore_index=True)

            # Increment counter
            count += 1
    else:
        break

# Display the final DataFrame
print(df)

# Save the DataFrame to a CSV file
df.to_csv(csv_path, index=False)

# Create a SQLite database connection
conn = sqlite3.connect(db_name)

# Load the DataFrame into a SQLite table
df.to_sql(table_name, conn, if_exists='replace', index=False)

# Close the database connection
conn.close()
